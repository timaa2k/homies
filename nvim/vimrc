  \ 'branch': '',
\ }

let g:airline#extensions#disable_rtp_load = v:true
let g:airline_extensions = [
  \ 'branch',
  \ 'coc',
  \ 'tmuxline',
\ ]

let g:airline#extensions#hunks#enabled = 0
let g:airline#extensions#branch#empty_message = ''
